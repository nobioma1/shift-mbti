{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "tests"]
}
